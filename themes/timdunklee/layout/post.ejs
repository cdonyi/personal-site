<div class="post">
  <div class="wrap wrap--narrow">

    <header class="post__header">
      <h1 class="h2 post__title"><%= page.title %></h1>
      <p class="post__meta"><%= page.date.format("MMM D, YYYY") %></p>
    </header>

    <article class="post__content">
      <%- page.content %>
    </article>

  </div>
</div>